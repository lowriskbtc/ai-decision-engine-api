# AI Decision Engine API - Environment Variables
# Copy this to .env and update with your values

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Database (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_decision_api

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_MEMORY_INSIGHTS=True
ENABLE_AUTONOMY_TRACKING=True

# API Keys (in production, use database)
# Add your API keys here or use database
